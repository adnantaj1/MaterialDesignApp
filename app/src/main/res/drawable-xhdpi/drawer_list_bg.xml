<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#99CCFF"/>
            <padding
                android:left="10dp"
                android:bottom="10dp"
                android:right="10dp"
                android:top="10dp"/>
            <stroke
                android:color="#333333"
                android:width="0.5dp"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item >
        <shape>
            <solid
                android:color="#fff"/>
            <padding
                android:left="10dp"
                android:bottom="10dp"
                android:right="10dp"
                android:top="10dp"/>
            <stroke
                android:color="#999999"
                android:width="0.2dp"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

</selector>